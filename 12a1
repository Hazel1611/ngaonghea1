        const stars = document.querySelectorAll('.rating input');
        const result = document.getElementById('result');
        stars.forEach(star => {
            star.addEventListener('change', () => {
                result.textContent = `Phải ${star.value} sao${star.value > 1 ? '' : ''} không đó`;
            });
        });
